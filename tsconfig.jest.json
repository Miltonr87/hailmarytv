{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "esnext",
        "target": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": false,
        "allowSyntheticDefaultImports": true,
        "types": [
            "jest",
            "@testing-library/jest-dom",
            "node"
        ]
    },
    "include": [
        "src",
        "setup-tests.ts"
    ]
}